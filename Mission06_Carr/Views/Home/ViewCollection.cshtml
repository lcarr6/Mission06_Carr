@model List<Movie>

@{
    ViewData["Title"] = "Movie Collection";
}

<h2 class="mb-4">Joel's Movie Collection</h2>

<p>
    <a asp-action="MoviesList" class="btn btn-success">+ Add New Movie</a>
</p>

<!-- Bootstrap-styled responsive table showing all movies -->
<div class="table-responsive">
    <table class="table table-striped table-hover table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Title</th>
                <th>Year</th>
                <th>Category</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Copied to Plex</th>
                <th>Lent To</th>
                <th>Notes</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Title</td>
                    <td>@movie.Year</td>
                    <td>@(movie.Category?.CategoryName ?? "N/A")</td>
                    <td>@(movie.Director ?? "")</td>
                    <td>@(movie.Rating ?? "")</td>
                    <td>@(movie.Edited ? "Yes" : "No")</td>
                    <td>@(movie.CopiedToPlex ? "Yes" : "No")</td>
                    <td>@(movie.LentTo ?? "")</td>
                    <td>@(movie.Notes ?? "")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@movie.MovieId" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@movie.MovieId" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<p class="text-muted">Total movies: @Model.Count</p>
