@model Movie

@{
    ViewData["Title"] = "Edit Movie";
}

<h2 class="mb-4">Edit Movie</h2>

<!-- Validation summary displayed at the top of the form -->
<div asp-validation-summary="All" class="text-danger mb-3"></div>

<form asp-action="Edit" asp-controller="Home" method="post">
    <!-- Hidden field to preserve the MovieId -->
    <input type="hidden" asp-for="MovieId" />

    <div class="row">
        <div class="col-md-6">

            <!-- Category dropdown populated from the database -->
            <div class="mb-3">
                <label asp-for="CategoryId" class="form-label">Category</label>
                <select asp-for="CategoryId" class="form-select">
                    <option value="">-- Select a Category --</option>
                    @foreach (var cat in (ViewBag.Categories as List<Category>) ?? new List<Category>())
                    {
                        <option value="@cat.CategoryId">@cat.CategoryName</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Title input (required) -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label">Title</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Year input (required, must be >= 1888) -->
            <div class="mb-3">
                <label asp-for="Year" class="form-label">Year</label>
                <input asp-for="Year" class="form-control" type="number" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <!-- Director input -->
            <div class="mb-3">
                <label asp-for="Director" class="form-label">Director</label>
                <input asp-for="Director" class="form-control" />
            </div>

            <!-- Rating dropdown -->
            <div class="mb-3">
                <label asp-for="Rating" class="form-label">Rating</label>
                <select asp-for="Rating" class="form-select">
                    <option value="">-- Select a Rating --</option>
                    <option>G</option>
                    <option>PG</option>
                    <option>PG-13</option>
                    <option>R</option>
                    <option>NR</option>
                    <option>TV-14</option>
                    <option>TV-PG</option>
                    <option>TV-MA</option>
                </select>
            </div>

            <!-- Edited radio buttons (required) -->
            <div class="mb-3">
                <label class="form-label">Edited?</label>
                <div>
                    <div class="form-check form-check-inline">
                        <input asp-for="Edited" class="form-check-input" type="radio" value="true" id="editedYes" />
                        <label class="form-check-label" for="editedYes">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="Edited" class="form-check-input" type="radio" value="false" id="editedNo" />
                        <label class="form-check-label" for="editedNo">No</label>
                    </div>
                </div>
                <span asp-validation-for="Edited" class="text-danger"></span>
            </div>

            <!-- Copied to Plex radio buttons (required) -->
            <div class="mb-3">
                <label class="form-label">Copied to Plex?</label>
                <div>
                    <div class="form-check form-check-inline">
                        <input asp-for="CopiedToPlex" class="form-check-input" type="radio" value="true" id="plexYes" />
                        <label class="form-check-label" for="plexYes">Yes</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input asp-for="CopiedToPlex" class="form-check-input" type="radio" value="false" id="plexNo" />
                        <label class="form-check-label" for="plexNo">No</label>
                    </div>
                </div>
                <span asp-validation-for="CopiedToPlex" class="text-danger"></span>
            </div>

            <!-- Lent To input -->
            <div class="mb-3">
                <label asp-for="LentTo" class="form-label">Lent To</label>
                <input asp-for="LentTo" class="form-control" />
            </div>

            <!-- Notes input (max 25 characters) -->
            <div class="mb-3">
                <label asp-for="Notes" class="form-label">Notes</label>
                <input asp-for="Notes" class="form-control" maxlength="25" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="ViewCollection" class="btn btn-secondary ms-2">Cancel</a>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
